<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <LinearLayout
            android:layout_margin="10pt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Other player email"
                android:id="@+id/etOtherEmail" android:layout_weight="1"/>
        <Button
                android:layout_marginLeft="3pt"
                android:background="@color/blue"
                android:text="Request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buRequest" android:layout_weight="1"
                android:onClick="buRequestEvent"/>
        <Button
                android:layout_marginLeft="3pt"
                android:background="@color/darkgreen"
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buAccept" android:layout_weight="1"
                android:onClick="buAcceptEvent"/>
    </LinearLayout>
    <TableLayout
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu1" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu2" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu3" android:onClick="buClick"/>
        </TableRow>
        <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu4" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu5" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu6" android:onClick="buClick"/>
        </TableRow>
        <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu7" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu8" android:onClick="buClick"/>
            <Button
                    android:layout_marginRight="3pt"
                    android:layout_marginBottom="3pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/bu9" android:onClick="buClick"/>
        </TableRow>
    </TableLayout>
</LinearLayout>